    <!-- Contenedor del video (con imagen de vista previa) -->
    <div class="video-container">
        <!-- Miniatura del video, que se muestra antes de cargar el video real -->
        <img src="/images/thumbnail.jpg" alt="Video de bienvenida" class="thumbnail" data-src="img/video1.mp4" />
    </div>

    <script>
        // Crear un IntersectionObserver para cargar el video solo cuando esté en la vista del navegador
        const observer = new IntersectionObserver((entries, observer) => {
            entries.forEach(entry => {
                // Verificamos si el contenedor del video (que contiene la imagen) es visible en la ventana del navegador
                if (entry.isIntersecting) {
                    const videoContainer = entry.target;  // Obtener el contenedor donde está la imagen
                    const videoSrc = videoContainer.querySelector('img').getAttribute('data-src');  // Obtener la ruta del video desde data-src

                    // Crear el elemento <video> dinámicamente
                    const video = document.createElement('video');
                    video.width = 640;  // Establecer el ancho del video
                    video.height = 360;  // Establecer el alto del video
                    video.controls = true;  // Mostrar los controles del video (play, pause, etc.)
                    video.src = videoSrc;  // Asignar la ruta del video
                    video.autoplay = true;  // Opcional: Reproducir el video automáticamente cuando se cargue

                    // Reemplazar la imagen por el video
                    videoContainer.innerHTML = '';  // Limpiar el contenedor (eliminando la imagen)
                    videoContainer.appendChild(video);  // Agregar el video al contenedor

                    // Dejar de observar este contenedor, ya que ya hemos cargado el video
                    observer.unobserve(videoContainer);
                }
            });
        });

        // Observamos todos los contenedores de video en la página
        document.querySelectorAll('.video-container').forEach(container => {
            observer.observe(container);  // Comenzamos a observar cada contenedor para detectar cuando esté en vista
        });
    </script>
	
